@model Profile

<form asp-controller="Media" asp-action="Edit" method="post">
	<div class="border p-4 mt-4">
		<div class="row pb-1">
			<hr />
			<h3 class="text-primary">Edit Profile</h3>
			<hr />
			<div asp-validation-summary="All" class="text-danger"></div>
		</div>
		<div class="mb-2">
			<label asp-for="DisplayName"/>
			<input asp-for="DisplayName" class="form-control"/>
			<span asp-validation-for="DisplayName" class="alert-danger"/>
		</div>
		<div class="mb-2">
			<label asp-for="Age" />
			<input asp-for="Age" class="form-control" />
			<span asp-validation-for="Age" class="alert-danger" />
		</div>
		<div class="mb-2">
			<label asp-for="CatsOwned" />
			<input asp-for="CatsOwned" class="form-control" />
			<span asp-validation-for="CatsOwned" class="alert-danger" />
		</div>
		<div class="mb-2">
			<label asp-for="FavoriteCatBreed" />
			<input asp-for="FavoriteCatBreed" class="form-control" />
			<span asp-validation-for="FavoriteCatBreed" class="alert-danger" />
		</div>

		<div class="mb-2">
			<label asp-for="Picture" />
			<input asp-for="Picture" class="form-control" />
			<span asp-validation-for="Picture" class="alert-danger" />
		</div>

		<input asp-for="Id" type="hidden" />
		<input asp-for="Username" type="hidden" />

		<button type="submit" class="btn btn-primary">
			Save Changes
		</button>
	</div>
</form>